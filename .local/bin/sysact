#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "ğŸšª leave $WM\nğŸ”ƒ reboot\nğŸ–¥shutdown" | dmenu -i -p 'Action: ')" in
	"ğŸšª leave $WM") kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ğŸ”ƒ reboot') $ctl reboot -i ;;
	'ğŸ–¥shutdown') $ctl poweroff -i ;;
	*) exit 1 ;;
esac
